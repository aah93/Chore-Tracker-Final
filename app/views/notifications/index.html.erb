<p id="notice"><%= notice %></p>

<h1>Approval Inbox</h1>

<table style="width:100%">
    <thead>
        <tr>
            <th>Unread?</th>
            <th>Type</th>
            <th>Name</th>
            <th>Link</th>
        </tr>
    </thead>
    
    
    <tbody>
        <% @notifications.each do |notif| %>
        <tr>
            <td><%= notif.unread %></td>
            <td><%= notif.chore? ? "Chore" : "Reward" %></td>
            <td>
                <% if notif.chore? %>
                <%= Chore.find(notif.object_id).name %>
                <% else %>
                <%= Reward.find(notif.object_id).name %>
                <% end %>
            </td>
            <td>
                <% if notif.chore? %>
                <%= link_to '#' %> <%# Replace with Chore Approval Page Path %>
                <% else %>
                <%= link_to '#' %> <%# Replace with Reward Approval Page Path %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>