<% if parent_signed_in? %>

<%= simple_form_for(@child, html: { multipart: true} ) do |f| %>

  <% if child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
      <% child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.label :name %><br />
     <div class="field"><%= f.text_field(:name) %> <br /></div>
     
    <%= f.label :balance %><br />
     <div class="field"> <%= f.text_field(:balance) %> <br /></div>
     
    
     <%= f.number_field :parent_id, :value => current_parent.id, :readonly => true, :hidden => true %><br />
     
     <%=f.label :avatar %><br />
     <% if @child.avatar? %>
     <%= image_tag(@child.avatar_url, :size => "180x180") %>
    
     <% end %>
      </br>
      </br>
     <%= f.file_field(:avatar) %>
     <%= f.hidden_field(:avatar_cache) %>
     <br />
     <label>
     <%= f.check_box :remove_avatar %>
     Use Default Avatar
     </label>
    
  <div class="actions">
    <% if @child.new_record? == true %>
    <%= f.submit("Add Child") %>
    <% else %>
    
    <%= f.submit("Save Child") %>
    <% end %>
  </div>
  
  
<% end %>

<% end %>
