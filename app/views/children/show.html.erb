<% if parent_signed_in? %>

<% if current_parent.id == @child.parent_id %>

<h2>Welcome <%= @child.name %>!</h2

<h3> Your Current Chores</h3>

<table style="width:40%">
  <tr>
    <th>Name</th></th>
    <th>Coins</th>
    <th>Date</th>
  </tr>
  <tr>
<tbody>
    <% @chores = Chore.where(:child_id => @child.id).each do |chore| %>
      <tr>
        <td><%= chore.name %></td>
        <td><%= chore.coins %></td>
        <td><%= chore.due_date ? chore.due_date.to_formatted_s(:long_ordinal) : "None" %></td>
      </tr>
    <% end %>
  </tbody>
  </tr>
</table>

  <tbody>
    <% @children.each do |child| %>
    <!--Each time it goes through and creates the three table rows for each child.
      <tr>
        <td><b> Chore <%#= child.name%></b> </td>
        
        <td> &nbsp; <%= link_to 'View', child_path(child) %> &nbsp;-</td>
        <td> &nbsp; <%= link_to 'Complete', edit_child_path(child) %> &nbsp;-</td>
        <td> &nbsp; <%= link_to 'Trade', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3> Completed Chores </h3>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.childrenOf(current_parent.id).each do |child| %>
      <tr>
        <td><b> Chore <%#= child.name%></b> </td>
        
        <td> &nbsp; <%= link_to 'View', child_path(child) %> &nbsp;-</td>
        <td> &nbsp; <%= link_to 'Complete', edit_child_path(child) %> &nbsp;-</td>
        <td> &nbsp; <%= link_to 'Trade', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

