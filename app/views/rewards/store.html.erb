<% @child_buyer = Child.find(getSubLoggedUser()[:id]) %>
<h1>Welcome to the Rewards Store, <%= @child_buyer.name %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td> This is a Reward </td>
        <td><%= reward.name %></td>
        <td><%= reward.cost %></td>
        <td>-<%= link_to ' View ', reward %></td>
        <td>-<%= link_to ' Buy ', purchase_reward_path(:id => reward.id) %></td>
        <td>-<%= link_to ' Request ', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>