<p id="notice"><%= notice %></p>

<h1>Rewards</h1>

<table style="width:40%">
  <tbody>
  <tr>
    <th>Name</th>
    <th>Coins</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.name %></td>
        <td><%= reward.cost %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
        <td><%= link_to 'Delete', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_reward_path %>
