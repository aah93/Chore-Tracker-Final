<p id="notice"><%= notice %></p>

<h1>Rewards</h1>


<table style = "width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Assigned</th>
      <th>Cost</th>
      <th>Approval?</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.name %> &nbsp&nbsp</td>
        <td><%= reward.child_id ? Child.find(reward.child_id).name : 'Unassigned' %>&nbsp&nbsp</td>
        <td><%= reward.cost %> &nbsp&nbsp</td>
        <td><%= if reward.auto_approve?
                  "No"
                else
                  "Yes"
                end%>&nbsp&nbsp</td>
        <td><%= link_to 'Show', reward %>  </td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %> </td>
        <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_reward_path %>
