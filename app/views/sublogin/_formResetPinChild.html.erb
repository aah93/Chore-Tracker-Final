<center>
<%= form_for(:sublogin) do |f| %>
</br>
</br>
</br>
    <%= f.label :child_id %>
    <div class="field"><%= f.collection_select :child_id, current_parent.children, :id, :name, {:include_blank => false}%> <br /></div>
    <br>
    <%= f.label :pin %><br />
    <div class="field"><%= f.text_field(:pin) %> <br /></div>
    <h3 style="font-weight: bold;"> Leave blank for no PIN </h3>
    <br><br>
    <div class="actions">
        <%= f.submit "Reset PIN" %>
    </div>
<% end %>
</center>