<% if Child.childrenOf(current_parent.id).size <= 0 %>



<div class="jumbotron">
    <center>
  <h1>Let's get started!</h1>
  <p>Let's start by Adding a Child to your family...</p>
  <br />
  <p><a class="btn btn-primary btn-lg" href='/children/new' role="button">Add Child</a></p>
  </center>
  <br />
  
<!--<%= controller_name %>-->
</div>

<% else %>

<% cookies.delete :logged %>

<div class="jumbotron" style="overflow: auto">
    <center>
  <h1>YOU GOT KIDS!</h1>
  <p>you got kids</p>
  <!--<br />-->
  <!--<%= current_parent.id %>-->
  
  <% @childs = Child.childrenOf(current_parent.id) %>
  
  <table class="home" id="sublog">
<tr class="home">
<% @childs.each do |child| %>
 
     
          <td class="home">
              <table class="home">
                  <tr class="home">
                    <td class="home"><%= link_to image_tag(child.avatar.standard), child_path(child.id) %></td>
                  </tr>
                  <tr>
                      <td class="home"><%= link_to child.name, child_path(child.id) %></td>
                  </tr>
              </table>
          </td>
      
<% end %>
</tr>
</table>
  
  </center>
  <br />
  
  
<!--<%= controller_name %>-->
</div>
<% end %>

